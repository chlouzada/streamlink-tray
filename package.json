{
  "name": "@streamlink-tray/root",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "version:patch": "cd apps/application && npm version patch --no-git-tag-version",
    "version:minor": "cd apps/application && npm version patch --no-git-tag-version",
    "version:major": "cd apps/application && npm version patch --no-git-tag-version"
  },
  "devDependencies": {
    "eslint": "^8.47.0",
    "prettier": "^3.0.2",
    "tsconfig": "*",
    "turbo": "latest"
  },
  "packageManager": "npm@9.5.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
